
@{
    ViewBag.Title = "DeleteAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DeleteAccount</h2>

<div class="page-header-section">
    <div class="container">
        <div class="row">
            <div class="col-12 d-flex justify-content-between justify-content-md-end">
                <ul class="breadcrumb">
                    <li><a href="/Home/Index">Home</a></li>
                    <li><span>/</span></li>
                    <li>Sign In</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- page-header-section end -->

<div ng-controller="AccountsController">
    <section class="login-section section-ptb">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 mb--30 mb-lg-0">
                    <div class="eflux-login-form-area">
                        <div class="eflux-login-form" id="mainForm">

                            <div class="input-item">
                                <label>Email</label>
                                <input type="text" ng-model="emailOrmobile" name="emailaddress" placeholder="Enter Valid Email Address" />
                            </div>

                            <div class="input-item">
                                <label>Mobile No</label>
                                <input type="password" ng-model="mobileNo" name="mobileno" placeholder="Enter Valid Mobile sNo" />
                            </div>

                            <div>
                                <button ng-click="DeleteAccount()" class="submit">Submit</button>
                            </div>
                        </div>

                        <div class="eflux-login-form" id="otpForm">

                            <div class="input-item">
                                <label>OTP No</label>
                                <input type="text" ng-model="otpNumber" name="optnumber" placeholder="Enter Your 4 Digit OTP" />
                            </div>

                            <div>
                                <button ng-click="ConfirmOTP()" class="submit">Confirm</button>
                            </div>
                        </div>

                        <a href="/Accounts/ForgotPassword" class="mt-4 ml-1">Forgot Password?</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section scripts{
    <script src="~/ngControllers/AccountsController.js"></script>
}